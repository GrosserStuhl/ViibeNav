<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <TextView
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/searchResultsNothingFoundText"
            android:id="@+id/searchResultsNothingFoundTextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"/>

    <ImageButton
            android:layout_width="115dp"
            android:layout_height="119dp"
            android:id="@+id/tryListAfterSearchBtn"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:visibility="visible"
            android:background="@drawable/custom_button"
            android:src="@drawable/liste"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/listenButtonText"
            android:onClick="openListActivity"
            android:stateListAnimator="@drawable/button_press_animator"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            />
</LinearLayout>